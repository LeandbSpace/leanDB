{ 
    "action": "FETCH_DATA", 
    "databaseName": "goldposts", 
    "tableName": "posts", 
    "columns": [ "title", "slug", "category" ],
    "limit": {
        "count": "2",
        "skip": "0"
    },
    "where": {
        "eq" : [ { "category": "Local News" }, { "category": "Health" }, { "category": "World News" } ]
    },
    "join": {
        "tableName": "users",
        "columns": "username, fullname, totalposts",
        "where": {
            "eq": [ { "_id": "_this.author" } ]
        }
    },
    "sort": { "_id": "desc" }
}